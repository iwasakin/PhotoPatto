<Window x:Class="PhotoPresenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoPresenter"
        mc:Ignorable="d"
        Title="PhotoPresenter" Height="700" Width="1100" MinHeight="480" MinWidth="800"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BBDEFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Button Style (for primary actions) -->
        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ToggleButton Style -->
        <Style x:Key="ModernToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#388E3C"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top toolbar removed: controls are placed within each pane -->

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- Left: Thumbnails and controls -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12" CornerRadius="6" Background="White">
                <DockPanel LastChildFill="True">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,6">
                        <Button x:Name="BtnSelectFolder" Content="フォルダ選択" Width="100" Margin="0,0,6,0" Style="{StaticResource AccentButton}" />
                        <TextBlock VerticalAlignment="Center" Text="ソート:" Margin="12,0,4,0" />
                        <ComboBox x:Name="ComboSort" Width="140" Margin="0,0,6,0" Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem>ファイル名</ComboBoxItem>
                            <ComboBoxItem>更新日付</ComboBoxItem>
                        </ComboBox>
                        <ToggleButton x:Name="BtnSortOrder" Width="67" Content="▲/▼" Style="{StaticResource ModernToggleButton}" />
                    </StackPanel>

                    <TextBlock DockPanel.Dock="Top" x:Name="TxtCurrentFolder" Text="フォルダ: 未選択" TextTrimming="CharacterEllipsis" Margin="0,0,0,6" FontSize="11" Foreground="#666" />

                    <TextBlock DockPanel.Dock="Top" Text="サムネイル一覧" FontWeight="Bold" Margin="0,0,0,6" />

                    <ListBox x:Name="ThumbnailList" SelectionMode="Single" HorizontalContentAlignment="Center"
                             ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Standard">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" Orientation="Horizontal" ItemWidth="200" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="ItemBorder" BorderBrush="#E0E0E0" BorderThickness="1" Margin="8" Padding="4" Width="184" CornerRadius="4" Background="White">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#2196F3"/>
                                                    <Setter TargetName="ItemBorder" Property="BorderThickness" Value="3"/>
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#E3F2FD"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#BBDEFB"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Image Source="{Binding Thumbnail}" Width="150" Height="100" Stretch="Uniform">
                                        <Image.LayoutTransform>
                                            <RotateTransform Angle="{Binding Rotation}" />
                                        </Image.LayoutTransform>
                                    </Image>
                                    <TextBlock Text="{Binding FileName}" TextWrapping="Wrap" FontSize="11" MaxHeight="60" TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Spacer column -->
            <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#E0E0E0" />

            <!-- Right: Preview and controls -->
            <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12" CornerRadius="6" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- toolbar on top of preview pane: 3 rows -->
                    <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,0,0,6">
                        <!-- Row 1: Display selector -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,4">
                            <TextBlock VerticalAlignment="Center" Text="出力先:" Margin="0,0,4,0" />
                            <ComboBox x:Name="ComboMonitor" Width="200" Style="{StaticResource ModernComboBox}" />
                        </StackPanel>
                        <!-- Row 2: Rotation, Black, Show -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,4">
                            <TextBlock VerticalAlignment="Center" Text="回転:" Margin="0,0,4,0" />
                            <Button x:Name="BtnRotateLeft" Content="↺" Width="40" Margin="0,0,6,0" Style="{StaticResource ModernButton}" />
                            <Button x:Name="BtnRotateRight" Content="↻" Width="40" Margin="0,0,12,0" Style="{StaticResource ModernButton}" />
                            <ToggleButton x:Name="BtnBlack" Content="Black" Width="70" Margin="0,0,6,0" Style="{StaticResource ModernToggleButton}" />
                            <ToggleButton x:Name="BtnShow" Content="Show" Width="70" Style="{StaticResource ModernToggleButton}" />
                        </StackPanel>
                        <!-- Row 3: Prev, Next -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button x:Name="BtnPrev" Content="Prev" Width="70" Margin="0,0,6,0" Style="{StaticResource ModernButton}" />
                            <Button x:Name="BtnNext" Content="Next" Width="70" Style="{StaticResource ModernButton}" />
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Grid.Row="1" Text="選択画像プレビュー" FontWeight="Bold" Margin="0,0,0,6" />

                    <Border Grid.Row="2" Background="#1E1E1E" VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="6" CornerRadius="4">
                        <Viewbox Stretch="Uniform">
                            <Image x:Name="PreviewImage" Width="1600" Height="900" Stretch="Uniform" />
                        </Viewbox>
                    </Border>

                    <!-- ファイル名はプレビュー画像の下に配置 -->
                    <TextBlock Grid.Row="3" x:Name="TxtSelectedFile" Text="ファイル: なし" TextTrimming="CharacterEllipsis" Margin="4,8,4,0" />
                </Grid>
            </Border>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="2" Background="#FFFFFF" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock x:Name="TxtStatus" Text="準備完了" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <Button x:Name="BtnQuit" Content="Quit" Click="BtnQuit_Click" Style="{StaticResource ModernButton}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
