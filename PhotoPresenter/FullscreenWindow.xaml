<Window x:Class="PhotoPresenter.FullscreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FullscreenWindow"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="Manual"
        Background="Black">
    <Grid>
        <!-- Two images for cross-fade -->
        <Image x:Name="ImgA" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Image x:Name="ImgB" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <!-- Black overlay used by Black button -->
        <Rectangle x:Name="BlackOverlay" Fill="Black" Visibility="Collapsed" />
    </Grid>
</Window>